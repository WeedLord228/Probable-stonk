    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- <link rel="manifest" href="site.webmanifest"> -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.png">
    <!-- Place favicon.ico in the root directory -->

    <!-- CSS here -->
    <link rel="stylesheet" href="css/map_bootstrap.min.css">
    <link rel="stylesheet" href="css/map_owl.carousel.min.css">
    <link rel="stylesheet" href="css/map_magnific-popup.css">
    <link rel="stylesheet" href="css/map_map_font-awesome.min.css">
    <link rel="stylesheet" href="css/map_map_themify-icons.css">
    <link rel="stylesheet" href="css/map_nice-select.css">
    <link rel="stylesheet" href="css/map_flaticon.css">
    <link rel="stylesheet" href="css/map_animate.css">
    <link rel="stylesheet" href="css/map_slicknav.css">
    <link rel="stylesheet" href="css/map_style.css">
</head>
<body>
<header>
    <div class="header-area ">
        <div id="sticky-header" class="main-header-area white-bg">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-2">
                        <div class="logo-img">
                            <a href="index.html">
                                <img src="" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="main-menu d-none d-lg-block">
                            <nav>
                                <ul id="navigation">
                                    <li><a href="index">На главную</a></li>
                                    <li><a href="articles">Статьи</a></li>
                                    <li><a href="map">Карты</a></li>
                                    <li><a href="experts">Эксперты</a></li>
                                    <li><a href="information" class="text">{{username1}}</a></li>
                                    <li><a href="/login" class="text">Выйти</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section class="blog_area single-post-area section-padding">
    <div class="container">
        <div class="row">
        <div class="col-lg-8 posts-list">
            {{#article}}
                <div class="single-post">
                    <div class="blog_details">
                        <h2>{{name}}
                        </h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li><a href="#"><i class="fa fa-user"></i>{{tags}}</a></li>
                            <li><a href="#"><i class="fa fa-comments"></i> Тут как бы число комментов</a></li>
                        </ul>
                        <p class="excert">
                            {{content}}
                        </p>
                    </div>
                </div>
                <div class="navigation-top">
                    <div class="d-sm-flex justify-content-between text-center">
                    </div>
                </div>
                <div class="blog-author">
                    <div class="media align-items-center">
                        <img src="img/blog/author.png" alt="Тут аватарка автора">
                        <div class="media-body">
                            <a href="#">
                                <h4>Тут автор нэйм</h4>
                            </a>
                            <p>Тут автор био</p>
                        </div>
                    </div>
                </div>
                <div class="comments-area">
                    <h4>Тут опять число коментов</h4>
                    <div class="comment-list">
                        <div class="single-comment justify-content-between d-flex">
                            <div class="user justify-content-between d-flex">
                                <div class="thumb">
                                    <img src="img/comment/comment_1.png" alt="коменты">
                                </div>
                                <div class="desc">
                                    {{#comments}}
                                        <p class="comment">
                                            {{commentCntent}}
                                        </p>
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex align-items-center">
                                                <h5>{{#author}}
                                                    <a href="#">{{username}}</a>
                                                {{/author}}
                                                </h5>
                                                <p class="date">Тут дату когда оставили комент </p>
                                            </div>
                                        </div>{{/comments}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="comment-form">

                    <h4>Оставить комментарий</h4>
                    <form class="form-contact comment_form" action="addComment?id={{id}}" id="commentForm"
                    method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                              <textarea class="form-control w-100" name="content" id="comment" cols="30" rows="9"
                                        placeholder="Текст комментария"></textarea>
                                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="button button-contactForm btn_1 boxed-btn">Отправить
                        </button>
                    </div>
                    </form>
                </div>
            </div>
            {{/article}}
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <aside class="single_sidebar_widget tag_cloud_widget">
                            <h4 class="widget_title">Популярные теги</h4>
                            <ul class="list">
                                <li>
                                    <a href="#">Тут</a>
                                </li>
                                <li>
                                    <a href="#">вывести</a>
                                </li>
                                <li>
                                    <a href="#">самые</a>
                                </li>
                                <li>
                                    <a href="#">популярные</a>
                                </li>
                                <li>
                                    <a href="#">теги</a>
                                </li>
                                <li>
                                    <a href="#">(просто сделай класс где вычисляются топ 5 тегов по популярности и запихни массивом строк)</a>
                                </li>
                            </ul>
                        </aside>
                    </div>
                </div>
        </div>
    </div>
</section>
</body>