<!doctype html>
<head>
    <meta charset="UTF-8" />
    <script src="https://maps.api.2gis.ru/2.0/loader.js?pkg=full"></script>
    <script type="text/javascript">
                     var map;

                    DG.then(function () {
                    map = DG.map('map', {
                        center: [56.83, 60.61],
                        zoom: 13
                    });
                    var coordinates = [];
                    {{#coordinates}}
                    coordinates.push(['{{x}}', '{{y}}']);
                    {{/coordinates}}
                    var markers = [];
                    {{#stores}}
                    markers.push('{{address}}')
                    {{/stores}}
                    for(var i=0 ; i<coordinates.length ; i++){
                    DG.marker([coordinates[i][0] , coordinates[i][1] ]).addTo(map).bindPopup(markers[i]);
                    }

                    });
    </script>
</head>
<body style="position: absolute; width:100%;">
<div>Формат ввода адреса: "Город, Улица, номер дома"</div>
<div>
    <form method="post" action="add">
        <input type="text" name="address" placeholder="Введите адрес магазина.">
        <input type="text" name="name" placeholder="Введите название товара.">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button type="submit">Добавить товар.</button><li><a href="/login" class="text">Выйти</a></li>
    </form>
    <strong>{{response}}</strong>
</div>

<div>Список Товаров</div>
<form method="post" action="filter">
    <input type="text" name="name">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
    <button type="submit">Найти</button>
</form>

<div>
    {{response}}
</div>

<div>
    <strong>{{name}}</strong>
</div>
{{#stores}}
    <div>
        {{address}}
    </div>
{{/stores}}
<div id="map" style="width:100%; height:600px;"></div>
</body>
</html>
